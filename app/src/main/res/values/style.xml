<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="settings_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/main_ripple_effect</item>
    </style>

    <style name="settings_buttons_search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/search_btn_ripple_effect</item>
    </style>

    <style name="settings_buttons_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/search_btn_ripple_effect</item>
    </style>

    <style name="settings_btn_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/ripple_effect_item</item>
    </style>

</resources>